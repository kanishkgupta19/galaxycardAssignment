<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

    <title>GalaxyCard Assignment</title>
  </head>
  <body>
    <!-- As a heading -->
    <nav class="navbar navbar-dark bg-dark">
    <div class="container-fluid">
        <span class="navbar-brand mb-0 h1">GalaxyCard</span>
    </div>
    </nav>
    <br><br>
    <div class="container">
    <center>
        <h1> User Panel</h1>
    </center>

    <br><br>
    <div class="card shadow">
        <div class="card-content p-5">
                <h4>USER DETAILS</h4>
                <table class="table table-bordered">
                    <tr><td>Name:</td><td><%= data[0].username %></td></tr>
                    <tr><td>Email:</td><td><%= data[0].email %> </td></tr>
                    <tr><td>Contact:</td><td><%= data[0].contact %></td></tr>
                </table>
        </div>
    </div>
    <br><br>
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header" style="background-color: darkgrey;"><h3>User upload Files</h3></div>
                <div class="card-content p-5">
                        <form onsubmit="" enctype="multipart/form-data" method="POST" action="/upload-file">
                        <div class="mb-3 row">
                            <label for="filename" class="col-sm-2 col-form-label">Filename</label>
                            <div class="col-sm-10">
                            <input type="text" name="filename" class="form-control" id="filename">
                            </div>
                        </div>
                        <input type="hidden" name="userid" value="<%= data[0].id %>">
                         <div class="mb-3 row">
                            <label for="file-upload" class="col-sm-2 col-form-label">Upload File</label>
                            <div class="col-sm-10">
                            <input type="file" name="file" class="form-control" id="file-upload">
                            </div>
                        </div>
                        <br>
                        <center><input type="submit" value="Upload File" class="btn btn-primary"></center>
                        </form>
                        
                </div>
            </div>
        </div>

         <div class="col-md-12">
            <div class="my-5 card shadow">
                <div class="card-header" style="background-color: darkgrey;"><h3>Uploaded Files</h3></div>
                <div class="card-content p-5">
                    <table class="table table-bordered">
                        <tr>
                            <th>S.No</th>
                            <th>Filename</th>
                            <th>File</th>
                            <th>Operation</th>
                        </tr>
                        <% sno=1 %>
                        <% data[1].forEach(file => { %>
                            <tr>
                                <td><%= sno %></td>
                                <td><%= file.filename %></td>
                                <td><a href="/<%= file.filepath %>" target="_blank">Open File</a></td>
                                <td>
                                    <form method="POST" action="/delete-file">
                                        <input type="hidden" value="<%= file.id %>" name="fileid">
                                        <button type="submit" class="btn btn-sm btn-danger">Delete File</button>
                                    </form>
                                </td>
                            </tr>
                            <% sno=sno+1 %>
                        <% }) %>
                    </table>                        
                </div>
            </div>
        </div>
    </div>
    </div>
    <br><br><br>  

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>

  </body>
</html>